  <script src="/static/page/classify.js"></script>

  <div class="small text-secondary">
    {{#if motif }}
      browsing <span class="text-primary">{{motif}}</span> motif
    {{else if style}}
      browsing <span class="text-primary">{{style}}</span> style
    {{/if}}
  </div>
  <hr/>

  <h4 class="mb-5">{{image._id}}</h4>

  <div class="bg-dark px-1 py-4 float-left w-50" style="text-align:center; border-radius:60px;">
    <img class="pl-1" style="border-radius:50px;" width="460" src="https://storage.googleapis.com/tattoo_images/{{image._id}}.jpg">
    <br/>
    {{#if image.deleted}}
      <button id="restore-button" class="btn btn-danger mx-auto mt-4">RESTORE</button>
    {{else}}
      <button id="delete-button" class="btn btn-danger mx-auto mt-4">DELETE</button>
    {{/if}}
    <button id="complete-button" class="btn btn-primary mx-auto mt-4">COMPLETE</button>
    <button id="toggle-instructive-button" data-instructive="{{image.instructive}}" class="btn btn-secondary mx-auto mt-4">{{#if image.instructive}}UN{{/if}}MARK INSTRUCTIVE</button>
  </div>

  <div class="float-right w-50">
    <div class="pl-3">
      <h5>styles</h5>
      <div id="new-style" class="mb-2">
        <input id="custom-style" class="d-inline w-100 rounded-lg" type="text" autocomplete="off"></input>
      </div>
      <div id="styles" class="small">
        {{#each styles}}
          <div class="style-outer float-left" style="width:30%">
            <input class="style ml-1" type="checkbox" name="{{this}}" {{#ifstyle ...image this}} checked="checked"{{/ifstyle}}></input> <span class="tag">{{this}}</span>
          </div>
        {{/each}}
      </div>
    </div>
  </div>

  <div class="clearfix"></div>
  <span id="image-id" data-id="{{image._id}}"></span>
