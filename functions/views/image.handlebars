  <script src="/static/page/classify.js"></script>

  <div class="small text-secondary">
    {{#if motif }}
      browsing <span class="text-primary">{{motif}}</span> motif
    {{else if style}}
      browsing <span class="text-primary">{{style}}</span> style
    {{/if}}
  </div>
  <hr/>

  <h4 class="mb-5">{{image._id}}</h4>

  <div class="bg-dark px-1 py-4 float-left rounded-lg w-25" style="text-align:center;">
    <img class="rounded-lg" width="200" src="https://storage.googleapis.com/inkstory/corpus/{{image._id}}.jpg">
    <br/>
    {{#if image.deleted}}
      <button id="restore-button" class="btn btn-danger mx-auto mt-4">RESTORE</button>
    {{else}}
      <button id="delete-button" class="btn btn-danger mx-auto mt-4">DELETE</button>
    {{/if}}
    <button id="complete-button" class="btn btn-primary mx-auto mt-4">COMPLETE</button>
    <button id="toggle-instructive-button" data-instructive="{{image.instructive}}" class="btn btn-secondary mx-auto mt-4">{{#if image.instructive}}UN{{/if}}MARK INSTRUCTIVE</button>
  </div>

  <div class="float-right w-75">
    <div class="float-left w-50 pl-3">
      <h5>styles</h5>
      <div id="new-style">
        <input id="custom-style" class="d-inline w-75" type="text" autocomplete="off"></input>
      </div>
      <div id="styles" style="columns:2">
        {{#each styles}}
          <div class="style-outer">
            <input class="style" type="checkbox" name="{{this}}" {{#ifstyle ...image this}} checked="checked"{{/ifstyle}}></input> <span class="tag">{{this}}</span>
          </div>
        {{/each}}
      </div>
    </div>

    <div class="float-left w-50 pl-3 border-left border-secondary">
      <h5>motifs</h5>
      <div id="new-motif">
        <input id="custom-motif" class="d-inline w-75" type="text" autocomplete="off"></input>
      </div>
      <div id="motifs" style="columns:2">
        {{#each  motifs}}
          <div class="motif-outer">
            <input class="motif" type="checkbox" name="{{this}}" {{#ifmotif ...image this }} checked="checked"{{/ifmotif}}></input> <span class="tag">{{this}}</span>
          </div>
        {{/each}}
      </div>
    </div>
  </div>

  <div class="clearfix"></div>
  <span id="image-id" data-id="{{image._id}}"></span>
